pipeline {
    agent {
        docker {
            image 'node:14.16.0'
        }
    }

    environment {
        BUCKET_NAME = 's3://jrproject3web'
        WORKSPACE_PATH = '/var/jenkins_home/workspace/project3-fronted/build' // pipeline project name
    }

    stages {
        stage('Install packages') {
            steps {
                echo 'Installing packages ...'
                sh 'npm install'
            }
        }
        
        stage('Build') {
            steps {
                echo 'Building ...'
                sh 'pwd'
                sh 'ls'
                sh 'npm run build'
                sh 'pwd'
                sh 'ls'   
            }
        }
        
        stage('Install AWS CLI') {
            steps {
                echo 'Installing AWS CLI ...'
                sh 'apt-get update'
                sh 'apt install python3-pip -y'
                sh 'pip3 install awscli --upgrade'
                sh 'aws --version'
            }
        }
        
        stage('Deploy to S3') {
            steps {
                sh 'aws --version'
                echo 'Deploying'
                sh 'aws --version'
                //withAWS(credentials: '06b5a459-1c49-47fe-ae48-cbec3c35b6c7', region: 'ap-southeast-2') {
                   withAWS(credentials: 'c7b84a61-c4e3-4baf-b5f1-00b59a3bf314', region: 'ap-southeast-2') {
                   sh 'aws --version'
                    sh 'aws s3 ls'
                    //sh 'aws s3 rm "${BUCKET_NAME}" --recursive'
                    //sh 'aws s3 cp "${WORKSPACE_PATH}" "${BUCKET_NAME}" --recursive --acl public-read'
                }
            }
        }
    }

    post {
        success {
            echo 'Success.'
        }
        failure {
            echo 'Failure.'
        }
    }
}